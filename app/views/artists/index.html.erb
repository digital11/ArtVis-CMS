<h1>Listing artists</h1>

<table>
  <tr>
    <th>Name</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @artists.each do |artist| %>
  <tr>
    <td><%= artist.name %></td>
    <td><%= link_to 'Show', artist, class: 'btn btn-mini' %></td>
    <td><%= link_to 'Edit', edit_artist_path(artist), class: 'btn btn-primary btn-mini' %></td>
    <td><%= link_to 'Destroy', artist, class: 'btn btn-mini', method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Artist', new_artist_path, class: 'btn' %>
